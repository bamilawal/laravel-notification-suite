{
    "name": "bamilawal/laravel-notification-suite",
    "description": "A complete Laravel email & notification system with reusable Blade templates, Notification classes, and admin alerts for SaaS, fintech, and business apps.",
    "type": "library",
    "license": "MIT",
    "keywords": ["notifications", "laravel-mail", "laravel-mail", "email-templates"],
    "autoload": {
        "psr-4": {
            "Bamilawal\\LaravelNotificationSuite\\": "src/"
        }
    },

    "extra": {
      "laravel": {
          "providers": [
              "Bamilawal\\LaravelNotificationSuite\\LaravelNotificationSuiteServiceProvider"
          ]
      }
    },

    "authors": [
        {
            "name": "bamilawal",
            "email": "delasoftng@gmail.com"
        }
    ],

    "require": {
        "php": "^8.2",
        "laravel/framework": "^9.0|^10.0|^11.0|^12.0"
    },
    
    "require-dev": {
        "orchestra/testbench": "^10.9"
    },

    "minimum-stability": "stable",
    "prefer-stable": true
    
}
